<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Client</th>
      <th>Fechapedido</th>
      <th>Fechaparaentregar</th>
      <th>Fechaentrega</th>
      <th>Direccion</th>
      <th>Cancelado</th>
      <th>En espera</th>
      <th>Entregado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.employee_id %></td>
        <td><%= order.client_id %></td>
        <td><%= order.fechaPedido %></td>
        <td><%= order.fechaParaEntregar %></td>
        <td><%= order.fechaEntrega %></td>
        <td><%= order.direccion %></td>
        <td><%= order.cancelado %></td>
        <td><%= order.en_espera %></td>
        <td><%= order.entregado %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

